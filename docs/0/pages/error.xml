<?xml version="1.0" encoding="utf-8" ?>
<?xml-stylesheet type="text/xsl" href="func.xslt" ?>
<func>
    <name>error()</name>
    <returns>void</returns>
    <description>
        Throw an error
    </description>
    <usages>
        <usage>
            <definition>error( message, type )</definition>
            <avaliable>0.0.1</avaliable>
            <params>
                <param>
                    <name>message</name>
                    <type>string</type>
                    <optional>no</optional>
                    <description>
                        The message with the error
                    </description>
                </param>
                <param>
                    <name>type</name>
                    <type>Function</type>
                    <optional>yes</optional>
                    <description>
                        The type of the error
                    </description>
                </param>
            </params>
        </usage>
    </usages>

    <shorthands>
        <shorthand>
            none
        </shorthand>
    </shorthands>
</func>
