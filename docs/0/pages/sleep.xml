<?xml version="1.0" encoding="utf-8" ?>
<?xml-stylesheet type="text/xsl" href="func.xslt" ?>
<func>
    <name>sleep()</name>
    <returns>Promise</returns>
    <description>
        Sleep times then return a promise. It should be use within `await` or `.then`
    </description>
    <usages>
        <usage>
            <definition>sleep( millisecond )</definition>
            <avaliable>0.0.1</avaliable>
            <params>
                <param>
                    <name>millisecond</name>
                    <type>number</type>
                    <optional>no</optional>
                    <description>
                        The milliseconds to sleep
                    </description>
                </param>
            </params>
        </usage>
    </usages>

    <shorthands>
        <shorthand>
            none
        </shorthand>
    </shorthands>
</func>
